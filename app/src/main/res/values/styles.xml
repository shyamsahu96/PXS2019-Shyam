<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabularTheme">
        <item name="android:textSize">@dimen/attendance_table_header</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/text_border_table</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tabularThemeContent">
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/text_border_table_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
